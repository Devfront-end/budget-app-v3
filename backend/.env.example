# Environment Variables - Backend

# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://budget_user:password123@localhost:5432/budget_app?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-change-this-in-production"
JWT_EXPIRY="7d"
JWT_REFRESH_EXPIRY="30d"

# Bcrypt
BCRYPT_ROUNDS=12

# CORS
FRONTEND_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Email (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@smartbudget.app"

# AI/OCR (Optional)
OPENAI_API_KEY=""
TESSERACT_PATH=""

# Monitoring (Optional)
SENTRY_DSN=""

# Session
SESSION_SECRET="your-session-secret-key-change-this"
